%div.navbar.navbar-fixed-top.navbar-inverse{ :role => 'navigation' }
  %div.container
    %div.navbar-header
      %button{ :type => 'button', :class => 'navbar-toggle', 'data-toggle' => 'collapse', 'data-target' => '.navbar-collapse' }
        %span.sr-only Toggle Navigation
        %span.icon-bar ''
        %span.icon-bar ''
        %span.icon-bar ''
      %a.navbar-brand{ :href=> "/"} HPAC
    %div.collapse.navbar-collapse
      %ul.nav.navbar-nav
        -site_content_titles.each do |page, content|
          -if content.length > 1
            %li.dropdown
              %a{ :href => '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}!= "#{page.capitalize} <b class=caret></b>"
              %ul.dropdown-menu
                -content.each do |id, title|
                  %li
                    %a{ :href =>  "#"}= title
          -else 
            %li
              %a{:href => "#"}= content.values.first
